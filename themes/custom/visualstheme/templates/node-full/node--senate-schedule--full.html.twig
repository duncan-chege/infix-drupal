<div class="breadcrumbs">
  <a href="{{ path('<front>') }}"> Home </a>
</div>

<h2 class="mb-2 fw-bold">Senate Schedule: {{label}}</h2>

<div class="row" style="margin: 2em 0;">
  <div class="col-md-8">
    <div class="schedule-document">
      <iframe src="{{ file_url (node.field_schedule_document.entity.uri.value) }}" width="100%" height="500%">
      </iframe>
    </div>
  </div>

  <div class="col-md-2">
    {% if content.field_schedule_document %}

    <div class="single-download-button">
      <a href="{{ file_url (node.field_schedule_document.entity.uri.value) }}" download>
        Download <i class="bi bi-download"></i>
      </a>
    </div>

    {% else %}
    {% endif %}
  </div>
</div>
